<h1>Review <%= @product_review.product.name %><h1>

<%= simple_form_for @product_review do |f| %>
<!-- remove this once auth is implemented -->
  <%= f.association :user %>
  <%= f.input :product_id, as: :hidden, input: { value: @product_review.product.id } %>
  <%= f.input :rating, as: :radio_buttons, collection: 1..7 %>
  <%= f.input :body, as: :text %>
  <%= f.button :submit %>
<% end %>