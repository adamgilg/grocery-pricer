
<div class="shopping-list">
  <% user_products_count(current_user).each do |product, count| %>
    <p>
      <%= link_to product.name, product_path(product) %> |
      Quantity: <%= count %>
      (avg price: <%= format_price(product.average_price) %>)
    </p>
    <%= remove_one_from_list_btn(product) %>
    <%= remove_all_btn(product) %>
  <% end %>
</div>

