<div id="new-product" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="new-product-label" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="new-product-label">New Product</h3>
  </div>
  <div class="modal-body">
    <%= simple_form_for new_product do |f| %>
      <%= f.input :name, input_html: { class: "span6" } %>
      <%= f.input :brand, input_html: { class: "span6" } %>
      <%= f.input :description, as: :text, input_html: { class: "span6" } %>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
  <% end %>
</div>