<div id="landing-page-content">
  <h2>Grocerier</h2>
  <h3> Featured Stores </h3>

  <div id="store-carousel" class="carousel slide">
    <ol class="carousel-indicators">
      <li data-target="#store-carousel" data-slide-to="0" class="active"></li>
      <li data-target="#store-carousel" data-slide-to="1"></li>
      <li data-target="#store-carousel" data-slide-to="2"></li>
    </ol>
    <!-- Carousel items -->
    <div class="carousel-inner">
      <div class="active item"><%= link_to image_tag('birite.jpg'), store_path(2) %></div>
      <div class="item"><%= link_to image_tag('Duc-Loi.jpg'), store_path(3) %></div>
      <div class="item"><%= link_to image_tag('miranchito.jpg'), store_path(4) %></div>
    </div>
    <!-- Carousel nav -->
    <a class="carousel-control left" href="#store-carousel" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#store-carousel" data-slide="next">&rsaquo;</a>
  </div>
</div>